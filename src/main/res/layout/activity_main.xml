<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:attr/listDivider"
        android:showDividers="middle"
        android:padding="8dp">

        <com.michaelpardo.androidcustomviews.widget.MarqueeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@string/poem_text" />

        <com.michaelpardo.androidcustomviews.widget.TitledTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/poem_text"
            android:title="@string/poem_title" />

        <com.michaelpardo.androidcustomviews.widget.QuoteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/poem_text" />

        <com.michaelpardo.androidcustomviews.widget.MeasuringTapeView
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#F7CA26" />

    </LinearLayout>

</ScrollView>